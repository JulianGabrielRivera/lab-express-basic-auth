<div id='form'>

  <h2>Log In</h2>

  <form action='/login' method='POST'>
    <label for='username'>Username

      <input type='username' name='username' placeholder='username goes here' />
    </label>

    <label for='password'>

      <input
        type='password'
        name='password'
        placeholder='your password goes here'
      />

    </label>
    <button type='submit'>Log In</button>
  </form>

  {{#if error}}
    <p style='color:red'>{{error}}</p>

  {{/if}}

</div>